<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTSClientMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label Text="Google TTS Client" FontSize="32" HorizontalOptions="Center" />
            <Entry x:Name="TextEntry" Placeholder="Enter text to speak" />
            <Button Text="Speak" Clicked="OnSpeakClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
